      array(
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_postal_code')) {
    db_add_field(
      'visitors',
      'visitors_postal_code',
      array(
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_latitude')) {
    db_add_field(
      'visitors',
      'visitors_latitude',
