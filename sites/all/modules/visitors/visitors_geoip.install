        'not null' => TRUE,
        'default' => 0,
      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_longitude')) {
    db_add_field(
      'visitors',
      'visitors_longitude',
      array(
        'type' => 'numeric',
        'precision' => 13,
        'scale' => 10,
        'not null' => TRUE,
        'default' => 0,
      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_dma_code')) {
    db_add_field(
      'visitors',
      'visitors_dma_code',
      array(
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_area_code')) {
    db_add_field(
