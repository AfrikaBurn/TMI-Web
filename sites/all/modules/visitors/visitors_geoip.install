      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_country_name')) {
    db_add_field(
      'visitors',
      'visitors_country_name',
      array(
        'type' => 'varchar',
        'length' => 128,
        'not null' => TRUE,
        'default' => '',
      )
    );
  }

  if (!$schema->fieldExists('visitors', 'visitors_region')) {
